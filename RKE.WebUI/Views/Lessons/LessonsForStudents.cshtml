@{ Layout = "_LayoutForLessons.cshtml";}
@Styles.Render("~/Content/LessonsForStudents")
@using Bender.Extensions
@model RKE.UIModels.RozkladModelForStudents.RozkladModelForStudentsRozkladModel
<div class="container">
    <div>@Model.GroupName</div>
    <div class="col-md-12">
    @foreach(var item in Model.LessonModel) { 
            <table class="table table-responsive table-striped table-bordered ">
                <tbody>
                <tr>
                    <td></td>
                    <td>Понеділок</td>
                    <td>Вівторок</td>
                    <td>Середа</td>
                    <td>Четвер</td>
                    <td>П'ятниця</td>
                    <td>Субота</td>
                </tr>
                <tr>
                @for (int i = 0; i < 6; i++)
                {
                    <tr>
                        <td></td>
                        @for (int j = 0; j < 6; j++)
                        {
                           
                            <td class="col-md-2">
                                @if (!item[i][j].IsNullOrEmpty())
                                {
                                    @item[i][j].Disziplin
                                    @item[i][j].Teacher
                                                                   
                                }
                            </td>

                            
                        }

                    </tr>
                    
                }


                </tbody>
            </table>
  }

        
    </div>
        @if(!Session.IsNullOrEmpty()){
        <div class="col-md-4 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Дисципліна</th>
                        <th>Дата</th>
                        <th>Ауд.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SessionModel)
                    {
                    <tr>
                        <td></td>
                        <td>@item.Disziplin</td>
                        <td>@item.Date</td>
                        <td>@item.Aud</td>
                    </tr>
                    }
                </tbody>
        </table>
    </div>
        }
</div>
        