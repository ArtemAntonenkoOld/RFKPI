@{ Layout = "_LayoutForLessons.cshtml";}
@using Bender.Extensions
@model RKE.UIModels.RozkladModelForStudents.RozkladModel
<div class="container">
    <div>@Model.GroupName</div>
@foreach (var weekItem in @Model.WeekModel)
{
    <table class="table table-responsive table-striped table-bordered ">
        <tbody>
        <tr>
            <td></td>
            <td>Понеділок</td>
            <td>Вівторок</td>
            <td>Середа</td>
            <td>Четвер</td>
            <td>П'ятниця</td>
            <td>Субота</td>
        </tr>
        <tr>
            <td>1<br>08:30</td>
            @for (int i = 0; i < 6; i++)
            {
                <tr>
                @for (int j = 0; j < 6; j++)
                 {
                     <td>
                         @if (!weekItem.LessonModel[i][j].IsNullOrEmpty())
                              {
                                  @weekItem.LessonModel[i][j].Day
                              }
                     </td>

                 }
                </tr>
            }
        
        
        </tbody>
    </table>
}
</div>